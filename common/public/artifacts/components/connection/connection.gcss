.connection {
	display: inline-block;
	position: relative;
	ul {
		margin: 0;
		text-align: left;
		list-style-type: none;
		position: absolute;
		top: 100%;
		li {
			padding: 0.3rem;
			font-size: 0.8rem;
			font-weight: normal;
			&.active {
				font-weight: bold;
			}
		}
		&.page-menu {
			display: block;
		}
	}
}